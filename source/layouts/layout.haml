/[if IE 8] <html class="no-js lt-ie9" lang="en">
:plain
  <!--[if gt IE 8] -->
%html{:lang => "en"}
  /<![endif]
  %head
    %meta{:charset => "utf-8"}/
    / Set the viewport width to device width for mobile
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %title= data.page.title || "AntiochCollege.org Documentation"
    / Included CSS Files
    = stylesheet_link_tag "app"
    = javascript_include_tag "foundation/modernizr.foundation"

  %body{:class => page_classes}
    .row
      %h1=link_to "AntiochCollege.org Documentation", "/"
      %hr

      .nine{:class => "columns", :role=> "content"}
        = yield
      %aside{:class => "three columns"}
        %h1 Categories
        %ul.side-nav
          %li=link_to "Account", "/account"
          %li=link_to "Content", "/content"
          %li=link_to "Navigation (menu)", "/navigation"
          %li=link_to "Further Reading", "/advanced"

    / Application Javascript, safe to override
    = javascript_include_tag "app"
